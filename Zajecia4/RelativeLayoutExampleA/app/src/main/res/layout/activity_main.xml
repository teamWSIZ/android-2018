<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_layout"
    android:gravity="center_vertical|center_horizontal"
    >
    <Button
        android:id="@+id/button0"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_dilog_1"
         />
    <Button
        android:id="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_dilog_2"
        />
    <View
        android:id="@+id/view_head"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#b9f6ca"
        />
    <View
        android:id="@+id/view_1"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/view_head"
        android:background="#80deea"
        />
    <View
        android:id="@+id/view_2"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/view_1"
        android:layout_toEndOf="@id/view_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#b9f6ca"
        />
    <View
        android:id="@+id/view_3"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/view_1"
        android:layout_toStartOf="@id/view_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#b9f6ca"
        />
    <View
        android:id="@+id/view_4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_1"
        android:layout_alignEnd="@id/view_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#b9f6ca"
        />
    <View
        android:id="@+id/view_5"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/view_1"
        android:layout_alignStart="@id/view_1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#b9f6ca"
        />
</RelativeLayout>